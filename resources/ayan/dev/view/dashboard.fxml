<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="ayan.dev.DashboardController"
            prefWidth="600" prefHeight="400">

    <children>
        <VBox alignment="CENTER"
              spacing="20"
              AnchorPane.topAnchor="0.0"
              AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              style="-fx-background-color: linear-gradient(to bottom right, #667eea, #764ba2);">

            <!-- ✅ Correct padding -->
            <padding>
                <Insets top="20" right="20" bottom="20" left="20" />
            </padding>

            <Label text="🏦 Welcome to Online Banking System 🏦"
                   style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;" />

            <Label fx:id="userNameLabel"
                   text="Hello, User!"
                   style="-fx-font-size: 16px; -fx-text-fill: #f0f0f0;" />

            <HBox alignment="CENTER" spacing="15">
                <Button text="💰 Deposit"
                        onAction="#handleDeposit"
                        style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 20; -fx-padding: 8 20 8 20;" />
                <Button text="💸 Withdraw"
                        onAction="#handleWithdraw"
                        style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 20; -fx-padding: 8 20 8 20;" />
            </HBox>

            <Button text="📊 Check Balance"
                    onAction="#handleCheckBalance"
                    style="-fx-background-color: #17a2b8; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 20; -fx-padding: 8 20 8 20;" />

            <Button text="🚪 Logout"
                    onAction="#handleLogout"
                    style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 20; -fx-padding: 8 20 8 20;" />

        </VBox>
    </children>
</AnchorPane>
